<Window x:Class="SheiApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SheiApp.Windows"
        mc:Ignorable="d"
        Title="Швейная фабрика" Height="450" Width="800" MinWidth="500" MinHeight="300" WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem x:Name="zak" Header="Заказы" Click="MenuItem_Click_1"/>
            <MenuItem x:Name="izd" Header="Изделия" Click="MenuItem_Click_2"/>
            <MenuItem x:Name="tkani" Header="Ткани" Click="MenuItem_Click_3"/>
            <MenuItem x:Name="fur" Header="Фурнитура" Click="MenuItem_Click_4"/>
            <MenuItem x:Name="post" Header="Поступления товаров" Click="post_Click"/>
            <MenuItem x:Name="otchety" Header="Отчеты" Click="otchety_Click"/>
            <MenuItem Header="Выйти" Click="MenuItem_Click" HorizontalAlignment="Right"/>
        </Menu>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
